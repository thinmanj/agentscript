// Advanced AgentScript Example: Data Processing Pipeline
use io.csv, io.json

intent ProcessUserData {
    description: "Process user data with filtering"
    
    pipeline: source.csv("users.csv") -> filter(user => user.age >= 18) -> sink.json("processed_users.json")
    
    on_error: log_and_continue
}

intent SimpleAggregation {
    description: "Simple data aggregation example"
    
    pipeline: source.csv("sales.csv") -> filter(record => record.amount > 100) -> sink.csv("high_value_sales.csv")
}
